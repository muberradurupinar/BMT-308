
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #FF6900;
            overflow-x: hidden;
            padding-top: 26px;
        }

            .sidebar a {
                padding: 10px 10px 17px 26px;
                text-decoration: none;
                font-size: 20px;
                color: #ffffff;
                display: block;
            }

                .sidebar a:hover {
                    color: #51270F;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-home"></i> &nbsp; Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list"></i> &nbsp; Kategoriler</a>
        <a href="/Diyetler/Index"><i class="glyphicon glyphicon-apple"></i> &nbsp; Diyetler</a>
        <a href="/Yazar/Index/"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Yazarlar</a>
        <a href="/Uye/Index/"><i class="glyphicon glyphicon-user"></i> &nbsp; Kullanıcılar</a>
        
        <a href="/Mesaj/Index/"><i class="glyphicon glyphicon-cog"></i> &nbsp; Mesajlar</a>
        <a href="/Yardım/Index/"><i class="glyphicon glyphicon-paperclip"></i> &nbsp; Yardım</a>
        <a href="/Login/GirisYap/"><i class="glyphicon glyphicon-remove-sign"></i> &nbsp; Çıkış</a>

    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

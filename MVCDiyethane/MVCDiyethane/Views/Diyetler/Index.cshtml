@using MVCDiyethane.Models.Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Diyet Sayfası</h2>
@using (Html.BeginForm("Index", "Diyetler", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Diyetin Adını Girin: &nbsp</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Diyet Adı</th>
        <th>Diyet Yazarı</th>
        <th>Kategorisi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD&nbsp @k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.AD</td>

            <td><a href="/Diyetler/DiyetSil/@k.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Diyetler/DiyetGetir/@k.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Diyetler/DiyetEkle" class="btn btn-primary">Yeni Diyet Ekle</a>

